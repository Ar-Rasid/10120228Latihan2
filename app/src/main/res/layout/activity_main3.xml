<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity3"
    android:background="@color/blue_light"
    android:paddingRight="40dp"
    android:paddingLeft="40dp">

    <TextView
        android:id="@+id/almost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Almost There"
        android:textColor="@color/white"
        android:textSize="35sp"
        android:layout_marginTop="180dp"/>

    <TextView
        android:id="@+id/thank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/almost"
        android:text="Thank you for registering with us. One more step, you need to check your email to active your account"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"/>

    <Button
        style="?attr/materialButtonOutlinedStyle"
        android:id="@+id/btnVerify"
        app:layout_constraintTop_toBottomOf="@+id/thank"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Verify"
        android:textSize="18sp"
        android:layout_marginTop="80dp"
        android:textColor="@color/white"
        app:strokeColor="@color/white"
        app:layout_constraintCircleRadius="16dp"
        android:backgroundTint="@color/blue_light"
        app:strokeWidth="2dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>